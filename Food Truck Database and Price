CREATE TABLE Food_Truck (id INTEGER PRIMARY KEY, item TEXT, Price INTEGER, cost INTEGER, quantity INTEGER);

INSERT INTO Food_Truck VALUES (1, "Lumpia", 5, 1, 20);
INSERT INTO Food_Truck VALUES (2, "Tamale", 3, 1, 20);
INSERT INTO Food_Truck VALUES (3, "Empanada", 2, 1, 20);
INSERT INTO Food_Truck VALUES (4, "Red Rice", 1, 1, 20);
INSERT INTO Food_Truck VALUES (5, "Tittya", 1, 1, 20);

--display the database ordered by price. 
SELECT * FROM Food_Truck
ORDER BY Price desc; 

--what is the avg price of items? 
SELECT AVG(Price)
FROM Food_Truck;

--what is the largest priced item?

SELECT MAX(Price)
FROM Food_Truck




